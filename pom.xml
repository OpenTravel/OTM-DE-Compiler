<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.opentravel.otm</groupId>
	<artifactId>ota-parent-pom</artifactId>
	<version>3.1-SNAPSHOT</version>
	<packaging>pom</packaging>
  <inceptionYear>2014</inceptionYear>

	<modules>
		<module>schema-compiler</module>
		<module>schema-compiler-admin</module>
		<module>schema-compiler-ext-ota2</module>
		<module>schema-compiler-cli</module>
		<module>ota2-schema-compiler</module>
		<module>ota2-repository-service</module>
	</modules>
  
  <build>
    <plugins>
      <plugin>
        <groupId>com.mycila</groupId>
        <artifactId>license-maven-plugin</artifactId>
        <version>2.6</version>
        <configuration>
          <header>com/mycila/maven/plugin/license/templates/APACHE-2.txt</header>
          <properties>
            <owner>OpenTravel Alliance</owner>
            <year>${project.inceptionYear}</year>
            <email>info@opentravel.org</email>
          </properties>
          <excludes>
            <exclude>**/pom.xml</exclude>
            <!-- exclude eclipse launchers-->
            <exclude>**/*.launch</exclude>
            <exclude>**/*.txt</exclude>
            <exclude>src/test/resources/**</exclude>
            <exclude>src/main/resources/**</exclude>
          </excludes>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>check</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
    
	
</project>
